<h1>Job Listings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', dashboard_job_path(job) %></td>
        <td><%= link_to 'Edit', edit_dashboard_job_path(job) %></td>
        <td><%= link_to 'Destroy', dashboard_job_path(job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= job.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_dashboard_job_path, class: 'btn' %>
